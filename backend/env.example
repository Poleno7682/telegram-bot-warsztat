# Telegram Bot Configuration
BOT_TOKEN=your_bot_token_here

# Database Configuration
DATABASE_URL=sqlite+aiosqlite:///./db/bot.db
# For PostgreSQL: postgresql+asyncpg://user:password@localhost:5432/dbname

# Admin Configuration (comma-separated Telegram IDs)
ADMIN_IDS=123456789,987654321

# Mechanic Configuration (comma-separated Telegram IDs, optional - can be managed via bot)
MECHANIC_IDS=

# User Configuration (comma-separated Telegram IDs, optional - can be managed via bot)
USER_IDS=

# Default Settings
DEFAULT_WORK_START=08:00
DEFAULT_WORK_END=16:00
DEFAULT_TIME_STEP=10
DEFAULT_BUFFER_TIME=15

# Timezone
TIMEZONE=Europe/Warsaw

# Logging
LOG_LEVEL=INFO
# Log format: "human" for readable output, "json" for structured logs
LOG_FORMAT=human


