# Telegram Bot Configuration
BOT_TOKEN=your_bot_token_here

# Database Configuration
# Option 1 (recommended for clarity): leave DATABASE_URL empty and use DB_* variables below.
# Option 2: set full DATABASE_URL (тогда DB_* игнорируются).
DATABASE_URL=

# PostgreSQL connection parameters (используются, если DATABASE_URL пустой и указаны все три: DB_HOST, DB_USER, DB_NAME)
# Пример:
#   DB_HOST=localhost
#   DB_PORT=5432
#   DB_USER=bot_user
#   DB_PASSWORD=super_secret
#   DB_NAME=bot_db
DB_HOST=
DB_PORT=5432
DB_USER=
DB_PASSWORD=
DB_NAME=

# Admin Configuration (comma-separated Telegram IDs)
ADMIN_IDS=123456789,987654321

# Mechanic Configuration (comma-separated Telegram IDs, optional - can be managed via bot)
MECHANIC_IDS=

# User Configuration (comma-separated Telegram IDs, optional - can be managed via bot)
USER_IDS=

# Default Settings
DEFAULT_WORK_START=08:00
DEFAULT_WORK_END=16:00
DEFAULT_TIME_STEP=10
DEFAULT_BUFFER_TIME=15

# Timezone
TIMEZONE=Europe/Warsaw

# Logging
LOG_LEVEL=INFO
# Log format: "human" for readable output, "json" for structured logs
LOG_FORMAT=human


